<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B8B83"
    tools:context=".tarefa5ex3">
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculo de IMC"
        android:textSize="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textmassa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira sua massa(KG):"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editmassa"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="massa"
        app:layout_constraintLeft_toRightOf="@+id/textmassa"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintBaseline_toBaselineOf="@id/textmassa"
        android:textColor="#ba4e4e"/>
    <TextView
        android:id="@+id/textaltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira sua altura(M):"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/textmassa"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editaltura"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="altura"
        app:layout_constraintLeft_toRightOf="@+id/textaltura"
        app:layout_constraintTop_toBottomOf="@+id/editmassa"
        app:layout_constraintBaseline_toBaselineOf="@id/textaltura"
        android:textColor="#ba4e4e"/>
    <Button
        android:id="@+id/btnimc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@id/editaltura"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textimc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC:"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnimc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/valorimc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnimc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/textimc"
        android:textSize="25dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>